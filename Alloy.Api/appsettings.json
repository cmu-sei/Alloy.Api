    "UseRolesFromIdP": true,
    "RolesClaimPath": "realm_access.roles",
    "UseGroupsFromIdP": true,
    "GroupsClaimPath": "groups"
  },
  "ClientSettings": {
    "BackgroundTimerIntervalSeconds": 60,
    "BackgroundTimerHealthSeconds": 180,
    "CasterCheckIntervalSeconds": 5,
